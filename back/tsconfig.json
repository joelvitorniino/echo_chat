{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",        
    "moduleResolution": "node16",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                               
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,      
    "outDir": "./dist"   
  },  
  "include": ["src"],
  "ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	}
}